{
  "name": "i2p-browser",
  "version": "1.0.5",
  "description": "I2P Browser - A secure browser with configurable security levels",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "generate-keys": "node scripts/generate-keys.js",
    "sign-release": "node scripts/sign-release.js"
  },
  "build": {
    "appId": "com.i2pbrowser.app",
    "productName": "I2P Browser",
    "icon": "assets/icons/icon.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/index.html",
      "assets/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "andytherbg",
      "repo": "i2p-browser"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network"
    }
  },
  "keywords": [
    "i2p",
    "browser",
    "privacy",
    "security"
  ],
  "author": "Andy <andytherbg@users.noreply.github.com>",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.6.2",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0",
    "playwright": "^1.55.1",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3"
  }
}
